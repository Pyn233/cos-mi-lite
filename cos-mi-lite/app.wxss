/* app.wxss */

@import "./lib/weui.wxss";

/* 引入字体图标 */
@font-face {
  font-family: 'iconfont';  /* project id 848797 */
  src: url('//at.alicdn.com/t/font_848797_39qjx8fm8ms.eot');
  src: url('//at.alicdn.com/t/font_848797_39qjx8fm8ms.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_848797_39qjx8fm8ms.woff') format('woff'),
  url('//at.alicdn.com/t/font_848797_39qjx8fm8ms.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_848797_39qjx8fm8ms.svg#iconfont') format('svg');
}
.iconfont{
  font-family:"iconfont" !important;
  font-size:16px;font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
.icon-subtract::before{content: '\e729';} 
.icon-add::before{content: '\e607';}

/* 全局配置 */
page{
  background: #ebebeb;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%; 
  box-sizing: border-box;
} 
